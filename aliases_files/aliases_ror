# Ruby aliases
alias be="bundle exec"
alias bn='bundle'
alias rn='rails new -T -d postgresql'
alias rs='bin/rails s'
alias rsb='bin/rails s -b 0.0.0.0'
alias rsp='bin/rails s -p'
alias rc='bin/rails c'
alias rg='bin/rails g'
alias rd='bin/rails d'
alias rgm='bin/rails g model'
alias rdm='bin/rails d model'
alias rgc='bin/rails g controller'
alias rdc='bin/rails d controller'
alias rgmi='bin/rails g migration'
alias rgs='bin/rails g serializer'
alias rdbr='bin/rake db:drop; bin/rake db:create; bin/rake db:migrate; RAILS_ENV=test bin/rake db:migrate;'
alias rdbrs='bin/rake db:drop; bin/rake db:create; bin/rake db:migrate; bin/rake db:seed;'
alias rdbc='bin/rake db:create'
alias rdbm='bin/rake db:migrate; RAILS_ENV=test bin/rake db:migrate'
alias rdbd='bin/rake db:drop'
alias rdbs='bin/rake db:seed'
alias rdbrb='bin/rake db:rollback; RAILS_ENV=test bin/rake db:rollback'

# Test db
alias trdbc='RAILS_ENV=test bin/rake db:create'
alias trdbm='RAILS_ENV=test bin/rake db:migrate'
alias trdbd='RAILS_ENV=test bin/rake db:drop'
alias trdbs='RAILS_ENV=test bin/rake db:seed'
alias trdbrb='RAILS_ENV=test bin/rake db:rollback'

alias ann='bundle exec annotate -i -p bottom --ck'

pgr() {
  pg_restore -c -O -d"$@"
}
