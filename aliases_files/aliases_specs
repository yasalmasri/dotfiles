# Specs
alias sp='clean && bundle exec rspec'
alias rbsp='clean && bundle exec rubocop -A && bundle exec rspec'
alias bmrbsp='clean && bundle exec brakeman && bundle exec rubocop -A && bundle exec rspec'
# alias spformat='clean && bin/rspec --fail-fast=1 --format documentation'

alias spc='clean && bundle exec rspec --fail-fast=1 spec/controllers/'
alias spr='clean && bundle exec rspec --fail-fast=1 spec/requests/'
alias spm='clean && bundle exec rspec --fail-fast=1 spec/models/'
alias spj='clean && bundle exec rspec --fail-fast=1 spec/jobs/'
alias sph='clean && bundle exec rspec --fail-fast=1 spec/helpers/'
alias sps='clean && bundle exec rspec --fail-fast=1 spec/services/'
alias spsr='clean && bundle exec rspec --fail-fast=1 spec/serializers/'
alias rgspm='bin/rails g rspec:model'
alias rgspc='bin/rails g rspec:controller'
alias rswag='clean && rails rswag:specs:swaggerize'
