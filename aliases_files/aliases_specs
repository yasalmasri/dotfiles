# Specs
alias sp='clean && bin/rspec'
alias rbsp='clean && bin/rubocop -A && bin/rspec'
alias bmrbsp='clean && bin/brakeman && bin/rubocop -A && bin/rspec'
# alias spformat='clean && bin/rspec --fail-fast=1 --format documentation'

alias spc='clean && bin/rspec --fail-fast=1 spec/controllers/'
alias spr='clean && bin/rspec --fail-fast=1 spec/requests/'
alias spm='clean && bin/rspec --fail-fast=1 spec/models/'
alias spf='clean && bin/rspec --fail-fast=1 spec/features/'
alias sph='clean && bin/rspec --fail-fast=1 spec/helpers/'
alias sps='clean && bin/rspec --fail-fast=1 spec/serializers/'
alias rgspm='bin/rails g rspec:model'
alias rgspc='bin/rails g rspec:controller'
